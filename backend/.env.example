# Environment variables for Personal Finance Dashboard Backend
# Copy this file to .env and update the values

# OpenAI API Key (Required for AI Chatbot features)
# Get your key from: https://platform.openai.com/api-keys
# The AI chatbot will not work without this, but all other features will work fine!
OPENAI_KEY=your_openai_key_here

# MongoDB Connection
# For local: mongodb://localhost:27017/finance_dashboard
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/finance_dashboard
MONGO_URI=mongodb://localhost:27017/finance_dashboard

# JWT Secret (Change this to a random string in production!)
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production

# Environment
NODE_ENV=development

# Port (default: 3000)
PORT=3000
